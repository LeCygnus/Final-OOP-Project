<Window x:Class="OOP_Final_Project.Payment_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Final_Project"
        mc:Ignorable="d"
        Title="Payment_Window" Height="150" Width="250">
    <Grid Background="NavajoWhite">
        <TextBox Name="txtbPayment" HorizontalAlignment="Left" Height="30" Margin="74,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="txtbPayment_TextInputDisabler"/>
        <Label Content="Payment:" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top"/>
        <Label Content="Balance:" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="txtremainingBalance" HorizontalAlignment="Left" Margin="74,11,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="30,78,0,0" VerticalAlignment="Top" Width="75" Click="Enter"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="140,78,0,0" VerticalAlignment="Top" Width="75" Click="Cancel"/>

    </Grid>
</Window>
